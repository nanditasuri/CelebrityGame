<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sym.symbiosis.celebritygame.ImageView"
    android:background="#ffffd349">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/celebimageview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link_button"
        android:id="@+id/know_more_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/celebimageview"
        android:onClick="onKnowMore"
        android:background="@drawable/button_background" />

    <com.facebook.share.widget.ShareButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_share_button"
        android:text="SHARE"
        android:layout_marginLeft="30dp"
        android:onClick="onFBShare"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask Friend"
        android:id="@+id/ask_friend_button"
        android:onClick="onAskFriend"
        android:background="@drawable/button_background"
        android:layout_below="@+id/celebimageview"
        android:layout_alignRight="@+id/know_more_button"
        android:layout_alignEnd="@+id/know_more_button" />

</RelativeLayout>
